<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Coiny&family=Sono:wght@200..800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>Register</title>
  </head>
  <body>
    <div class="container">
      <header class="header">
        <div class="logo">
          <img src="/logo.png" alt="Logo" />
          <h1>Register</h1>
        </div>
      </header>
      <form action="/register" method="POST" class="register-form" novalidate>
        <% if (errors && errors.length) { %>
        <div class="alert alert-danger">
          <ul>
            <% errors.forEach(e => { %>
            <li><%= e.msg %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Username"
          autofocus
        />
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Password"
        />
        <button class="btn btn-large">Register</button>
        <button type="button" class="btn btn-large" id="login-button">
          Login Instead
        </button>
      </form>
    </div>
    <script src="/script.js" defer></script>
  </body>
</html>
